<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="remote.Remote">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="81dp"
        android:layout_height="80dp"
        android:id="@+id/volumeUp"
        android:background="@drawable/volume_up"
        android:width="80dp"
        android:backgroundTint="#7c0909"
        android:height="80dp"
        android:layout_row="5"
        android:layout_column="3"
        android:layout_above="@+id/play"
        android:layout_alignStart="@+id/play"
        android:layout_marginBottom="26dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBack"
        android:background="@android:drawable/ic_media_rew"
        android:width="80dp"
        android:backgroundTint="#7c0909"
        android:height="75dp"
        android:layout_row="7"
        android:layout_column="2"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="29dp"
        android:layout_alignTop="@+id/play"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play"
        android:background="@android:drawable/ic_media_play"
        android:width="80dp"
        android:backgroundTint="#7c0909"
        android:layout_row="7"
        android:layout_gravity="center_vertical"
        android:layout_alignTop="@+id/seekForward"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/volumeDown" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:id="@+id/seekForward"
        android:background="@android:drawable/ic_media_ff"
        android:width="80dp"
        android:backgroundTint="#7c0909"
        android:layout_row="7"
        android:layout_column="4"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="184dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/volumeDown"
        android:layout_marginStart="16dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="84dp"
        android:layout_height="72dp"
        android:id="@+id/stop"
        android:background="@drawable/stop"
        android:width="80dp"
        android:height="80dp"
        android:layout_row="8"
        android:layout_column="0"
        android:layout_below="@+id/volumeDown"
        android:layout_alignEnd="@+id/seekBack" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="82dp"
        android:layout_height="67dp"
        android:id="@+id/volumeDown"
        android:background="@drawable/volume_down"
        android:width="80dp"
        android:backgroundTint="#7c0909"
        android:height="80dp"
        android:layout_row="8"
        android:layout_column="3"
        android:layout_gravity="bottom"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/seekForward"
        android:layout_alignStart="@+id/play" />
</RelativeLayout>
