<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="comrahmnathan.github.controller.MainActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="seek back"
        android:id="@+id/seekBack"
        android:layout_marginTop="207dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/volumeDown"
        android:layout_toStartOf="@+id/volumeDown" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="forward"
        android:id="@+id/seekForward"
        android:layout_alignTop="@+id/play"
        android:layout_toRightOf="@+id/volumeDown"
        android:layout_toEndOf="@+id/volumeDown" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="play/pause"
        android:id="@+id/play"
        android:layout_alignTop="@+id/seekBack"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volume up"
        android:id="@+id/volumeUp"
        android:layout_above="@+id/play"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volume down"
        android:id="@+id/volumeDown"
        android:layout_below="@+id/play"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/stop"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/volumeDown"
        android:layout_toLeftOf="@+id/play"
        android:layout_toStartOf="@+id/play" />

</RelativeLayout>
