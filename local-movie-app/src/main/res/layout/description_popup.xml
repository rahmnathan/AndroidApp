<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark">

    <ImageView
        android:id="@+id/detailedPoster"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:padding="5dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/detailedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:layout_below="@+id/detailedPoster"
        android:layout_marginHorizontal="10dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Plot"
        android:id="@+id/detailedPlot"
        android:gravity="bottom"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/detailedTitle"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Starring"
        android:id="@+id/detailedActorsLabel"
        android:gravity="bottom"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/detailedPlot"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Actors"
        android:id="@+id/detailedActors"
        android:gravity="bottom"
        android:layout_marginTop="2dp"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/detailedActorsLabel"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/detailedActors"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="-20dp"
            android:layout_width="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="IMDB"
                android:id="@+id/detailedIMDBRatingLabel"
                android:gravity="bottom"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="10dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="IMDB Rating"
                android:id="@+id/detailedIMDBRating"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/detailedIMDBRatingLabel"
                android:gravity="bottom"
                android:layout_centerHorizontal="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Year"
                android:id="@+id/detailedYearLabel"
                android:gravity="bottom"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="10dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/detailedYear"
                android:text="Year"
                android:gravity="bottom"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/detailedYearLabel"
                android:layout_centerHorizontal="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="-50dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Metacritic"
                android:id="@+id/detailedMetaRatingLabel"
                android:gravity="bottom"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="10dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Metacritic Rating"
                android:id="@+id/detailedMetaRating"
                android:gravity="bottom"
                android:layout_below="@+id/detailedMetaRatingLabel"
                android:layout_marginBottom="2dp"
                android:layout_centerHorizontal="true"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>